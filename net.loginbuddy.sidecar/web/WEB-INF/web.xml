<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Load the configuration. No servlet-mapping required -->
    <servlet>
        <servlet-name>Bootstrap</servlet-name>
        <servlet-class>net.loginbuddy.sidecar.server.Overlord</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SidecarInitialize</servlet-name>
        <servlet-class>net.loginbuddy.sidecar.server.Initialize</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SidecarCallback</servlet-name>
        <servlet-class>net.loginbuddy.sidecar.server.Callback</servlet-class>
    </servlet>

    <!-- health checks -->
    <servlet>
        <servlet-name>Liveness</servlet-name>
        <servlet-class>net.loginbuddy.sidecar.server.HealthCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Health</servlet-name>
        <servlet-class>net.loginbuddy.sidecar.server.HealthCheck</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SidecarInitialize</servlet-name>
        <url-pattern>/sidecar/initialize</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SidecarCallback</servlet-name>
        <url-pattern>/sidecar/callback</url-pattern>
    </servlet-mapping>

    <!-- Health checks -->
    <servlet-mapping>
        <servlet-name>Liveness</servlet-name>
        <url-pattern>/status/liveness</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Health</servlet-name>
        <url-pattern>/status/health</url-pattern>
    </servlet-mapping>

    <mime-mapping>
        <extension>json</extension>
        <mime-type>application/json</mime-type>
    </mime-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>HTTPSOrHTTP</web-resource-name>
            <url-pattern>/sidecar/*</url-pattern>
        </web-resource-collection>
    </security-constraint>

</web-app>