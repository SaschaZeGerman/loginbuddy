<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <display-name>Loginbuddy</display-name>

    <servlet>
        <servlet-name>Initialize</servlet-name>
        <servlet-class>net.loginbuddy.service.client.Initialize</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Authorize</servlet-name>
        <servlet-class>net.loginbuddy.service.server.Authorize</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Token</servlet-name>
        <servlet-class>net.loginbuddy.service.server.Token</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Callback</servlet-name>
        <servlet-class>net.loginbuddy.service.client.Callback</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Initialize</servlet-name>
        <url-pattern>/initialize</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Authorize</servlet-name>
        <url-pattern>/providers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Authorize</servlet-name>
        <url-pattern>/authorize</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Token</servlet-name>
        <url-pattern>/exchange</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Token</servlet-name>
        <url-pattern>/token</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Callback</servlet-name>
        <url-pattern>/callback</url-pattern>
    </servlet-mapping>

    <resource-env-ref>
        <description>Object factory for ConfigUtil instances</description>
        <resource-env-ref-name>bean/ConfigUtilFactory</resource-env-ref-name>
        <resource-env-ref-type>net.loginbuddy.service.config.ConfigUtil</resource-env-ref-type>
    </resource-env-ref>

    <resource-env-ref>
        <description>Object factory for Cache instances</description>
        <resource-env-ref-name>bean/CacheFactory</resource-env-ref-name>
        <resource-env-ref-type>net.loginbuddy.common.cache.DefaultCache</resource-env-ref-type>
    </resource-env-ref>

    <security-constraint>
        <display-name>Security for Loginbuddy configuration</display-name>
        <web-resource-collection>
            <web-resource-name>config.json</web-resource-name>
            <url-pattern>/config/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>internal_apis</web-resource-name>
            <url-pattern>/iapis/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>HTTPSOnly</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>HTTPSOrHTTP</web-resource-name>
            <url-pattern>/favicon.ico</url-pattern>
            <url-pattern>/images/*</url-pattern>
            <url-pattern>/css/*</url-pattern>
            <url-pattern>/fonts/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-role>
        <role-name>admin</role-name>
    </security-role>

</web-app>